Name: cockpit-blog-kit
Version: %{VERSION}
Release: 1%{?dist}
Summary: Cockpit Blog Kit Example Module
License: LGPLv2+

Source: cockpit-blog-kit-%{version}.tar.gz
BuildArch: noarch
BuildRequires:  libappstream-glib

Requires: cockpit-system

%define debug_package %{nil}

%description
Cockpit Blog Kit Example Module

%prep
%setup -n cockpit-blog-kit

%install
%make_install
appstream-util validate-relax --nonet %{buildroot}/%{_datadir}/metainfo/*

# drop source maps, they are large and just for debugging
find %{buildroot}%{_datadir}/cockpit/ -name '*.map' | xargs rm --verbose

%files
%{_datadir}/cockpit/*
%{_datadir}/metainfo/*

%changelog
